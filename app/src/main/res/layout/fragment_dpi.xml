<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical"
              tools:context="com.github.snowdream.android.apps.dimensionconverter.DPIFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_ldpi"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ldpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText
                android:id="@+id/editText_mdpi" android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="mdpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:layout_width="0dp"
                  android:id="@+id/editText_tvdpi"
                  android:inputType="numberDecimal"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="tvdpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText
                android:id="@+id/editText_hdpi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="hdpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_xhdpi"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xhdpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_xxhdpi"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xxhdpi"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_xxxhdpi"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xxxhdpi"/>
    </LinearLayout>
</LinearLayout>
