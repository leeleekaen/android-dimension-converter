<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical"
              tools:context="com.github.snowdream.android.apps.dimensionconverter.DimensionFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_dp"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="dp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText
                android:id="@+id/editText_dip" android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="dip" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:layout_width="0dp"
                  android:id="@+id/editText_sp"
                  android:inputType="numberDecimal"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText
                android:id="@+id/editText_pt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="pt" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_px"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="px" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_mm"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="mm"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <EditText android:id="@+id/editText_in"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="in"/>
    </LinearLayout>
</LinearLayout>
